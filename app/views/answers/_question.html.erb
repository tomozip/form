<li>
  <p><%= question.body %></p>
  <%= f.fields_for "question#{question_counter}".to_sym do |t| %>
    <% case question.category
      when 'input' %>
      <%= t.text_field :body, placeholder: '回答', required: true %>
    <% when 'textarea' %>
      <%= t.text_area :body, placeholder: '回答', required: true %>
    <% when 'selectbox' %>
      <%= t.select :question_choice_id, @options[question.id].first.map {|choice| [choice.body, choice.id]},
      {include_blank: true}, {required: true} %>
    <% when 'checkbox' %>
      <% @options[question.id].first.each_with_index do |choice, index| %>
        <%= t.check_box "#{index}[question_choice_id]", value: choice.id %><%= choice.body %>
      <% end %>
    <% when 'radio' %>
      <%= t.radio_button :question_choice_id, value: choice.id %><%= choice.body %>
    <% end %>
    <%= t.hidden_field :category, value: question.category %>
  <% end %>
</li>
