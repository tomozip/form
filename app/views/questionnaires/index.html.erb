<h1>アンケートページ</h1>
<p><%= link_to '[戻る]', admin_path(current_admin.id) %></p>
<%= form_for @questionnaire do |f| %>
  <%= render partial: 'shared/error', locals: {variable: @questionnaire} %>
  <p>タイトル</p>
  <%= f.text_field :title, required: true, placeholder: '○○○アンケート' %>
  <p>アンケート説明</p>
  <%= f.text_area :description, required: true, placeholder: '~に関してのアンケートです。  ' %>
  <p><%= f.submit '[アンケート作成]' %></p>
<% end %>
<hr>
<h3>アンケート一覧</h3>
<h5>作成中アンケート</h5>
<ul>
  <%= render partial: 'questionnaire', collection: @edit_questionnaires, as: 'questionnaire' %>
</ul>
<h5>発行済みアンケート</h5>
<ul>
  <%= render partial: 'questionnaire', collection: @sent_questionnaires, as: 'questionnaire' %>
</ul>
